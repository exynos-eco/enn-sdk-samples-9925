<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/selectFragment">

    <fragment
        android:id="@+id/selectFragment"
        android:name="com.samsung.segmentation.fragments.SelectFragment"
        android:label="SelectFragment" >
        <action
            android:id="@+id/action_selectFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_selectFragment_to_imageFragment"
            app:destination="@id/imageFragment" />
    </fragment>
    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.samsung.segmentation.fragments.CameraFragment"
        android:label="CameraFragment" />
    <fragment
        android:id="@+id/imageFragment"
        android:name="com.samsung.segmentation.fragments.ImageFragment"
        android:label="ImageFragment" />
</navigation>